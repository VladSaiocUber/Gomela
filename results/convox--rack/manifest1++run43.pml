
// https://github.com/convox/rack/blob/ee5e31801fa5f2e69aa3bd41339db0b4f64c82fe/pkg/manifest1/exec.go#L43
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	chan child_manifest1RunAsync0 = [0] of {int};
	Chandef done;
	int num_msgs = 0;
	bool state = false;
	int i;
	

	if
	:: 1 > 0 -> 
		done.size = 1;
		run AsyncChan(done)
	:: else -> 
		run sync_monitor(done)
	fi;
	run manifest1RunAsync(done,child_manifest1RunAsync0);
	child_manifest1RunAsync0?0;
	

	if
	:: done.async_rcv?state,num_msgs;
	:: done.sync?state,num_msgs;
	fi;
	goto stop_process
stop_process:skip
}

proctype manifest1RunAsync(Chandef done;chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	chan child_manifest1RunAsync0 = [0] of {int};
	run manifest1RunAsync(done,child_manifest1RunAsync0);
	child_manifest1RunAsync0?0;
	stop_process: skip;
	child!0
}

