#define Check_c_ConcurrentChecks  3
#define Check_c_Checkers  0

// https://github.com/sourcegraph/checkup/blob/77e7567835d43fc7358b88e8e984f2dd85dacf4f/checkup.go#L51
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	Chandef throttle;
	int num_msgs = 0;
	bool state = false;
	int i;
	int c_Checkers = Check_c_Checkers;
	int c_ConcurrentChecks = Check_c_ConcurrentChecks;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: c_ConcurrentChecks > 0 -> 
		throttle.size = c_ConcurrentChecks;
		run AsyncChan(throttle)
	:: else -> 
		run sync_monitor(throttle)
	fi;
		for(i : 0.. c_Checkers-1) {
		for10: skip;
		

		if
		:: throttle.async_send!0;
		:: throttle.sync!false,0 -> 
			throttle.sending?state
		fi;
		for10_end: skip
	};
	for10_exit: skip;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	goto stop_process
stop_process:skip
}


