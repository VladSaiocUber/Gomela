
// https://github.com/cortesi/devd/blob/c1a3bfba27d8e028de90fb24452374412a4cffb3/livereload/livereload.go#L51
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	Chandef broadcast;
	int num_msgs = 0;
	bool state = false;
	int i;
	

	if
	:: 50 > 0 -> 
		broadcast.size = 50;
		run AsyncChan(broadcast)
	:: else -> 
		run sync_monitor(broadcast)
	fi;
	run go_run(broadcast);
	goto stop_process
stop_process:skip
}

proctype go_run(Chandef broadcast) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	do
	:: true -> 
		

		if
		:: broadcast.async_rcv?state,num_msgs;
		:: broadcast.sync?state,num_msgs;
		fi;
		

		if
		:: state && num_msgs <= 0 -> 
			break
		:: else -> 
			for10: skip;
			for10_end: skip
		fi
	od;
	for10_exit: skip;
	stop_process: skip
}

