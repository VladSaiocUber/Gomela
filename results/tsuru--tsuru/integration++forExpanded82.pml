#define forExpanded_maxConcurrency  0
#define forExpanded_expanded  0

// https://github.com/tsuru/tsuru/blob/acb87a16aa1c971080a7771119155c44e5eab9f2/integration/flow.go#L82
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	Chandef limiter;
	int num_msgs = 0;
	bool state = false;
	int i;
	int expanded = forExpanded_expanded;
	int maxConcurrency = forExpanded_maxConcurrency;
	

	if
	:: maxConcurrency > 0 -> 
		limiter.size = maxConcurrency;
		run AsyncChan(limiter)
	:: else -> 
		run sync_monitor(limiter)
	fi;
	expandedloop: skip;
			for(i : 0.. expanded-1) {
		for10: skip;
		for10_end: skip
	};
	for10_exit: skip
stop_process:skip
}


