#define doQueryParallelHarness_serversNum  0
#define doQueryParallelHarness_targetServers  0

// https://github.com/tenta-browser/tenta-dns/blob/8a8ab0bbeb86f54d3a26606118d06ca03e49dfdd/responder/recursive_dns_resolver.go#L313
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}
typedef Wgdef {
	chan Add = [0] of {int};
	chan Wait = [0] of {int};
	int Counter = 0;}



init { 
	Chandef res;
	Wgdef wg;
	int num_msgs = 0;
	bool state = false;
	int i;
	int targetServers = doQueryParallelHarness_targetServers;
	int serversNum = doQueryParallelHarness_serversNum;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	run wgMonitor(wg);
	wg.Add!serversNum;
	run go_Anonymous0(wg);
	

	if
	:: targetServers > 0 -> 
		res.size = targetServers;
		run AsyncChan(res)
	:: else -> 
		run sync_monitor(res)
	fi;
		for(i : 0.. targetServers-1) {
		for10: skip;
		run go_Anonymous1(res,wg);
		for10_end: skip
	};
	for10_exit: skip;
	do
	:: true -> 
		

		if
		:: res.async_rcv?state,num_msgs;
		:: res.sync?state,num_msgs;
		fi;
		

		if
		:: state && num_msgs <= 0 -> 
			break
		:: else -> 
			for20: skip;
			

			if
			:: true -> 
				goto for20_end
			:: true;
			fi;
			

			if
			:: true -> 
				goto stop_process
			fi;
			for20_end: skip
		fi
	od;
	for20_exit: skip;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	goto stop_process
stop_process:skip
}

proctype go_Anonymous0(Wgdef wg) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	wg.Wait?0;
	stop_process: skip
}
proctype go_Anonymous1(Chandef res;Wgdef wg) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	

	if
	:: res.async_send!0;
	:: res.sync!false,0 -> 
		res.sending?state
	fi;
	

	if
	:: true -> 
		res.closing!true
	:: true;
	fi;
	stop_process: skip;
	wg.Add!-1
}

