typedef Mutexdef {
	chan Lock = [0] of {bool};
	chan Unlock = [0] of {bool};
	chan RLock = [0] of {bool};
	chan RUnlock = [0] of {bool};
	int Counter = 0;}



init { 
	chan child_newPeriodic1100 = [1] of {int};
	run newPeriodic110(child_newPeriodic1100);
	run receiver(child_newPeriodic1100)
stop_process:skip
}

proctype newPeriodic110(chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Mutexdef w_mu;
	run mutexMonitor(w_mu);
	goto stop_process;
	stop_process: skip;
	child!0
}

 /* ================================================================================== */
