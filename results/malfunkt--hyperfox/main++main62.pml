init { 
	Wgdef wg;
	Chandef res;
	int num_msgs = 0;
	bool state = false;
	int i;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: 256 > 0 -> 
		res.size = 256;
		run AsyncChan(res)
	:: else -> 
