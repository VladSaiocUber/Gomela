proctype go_Anonymous0(Chandef res) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	do
	:: true -> 
		

		if
		:: res.async_rcv?state,num_msgs;
		:: res.sync?state,num_msgs;
		fi;
		

		if
		:: state && num_msgs <= 0 -> 
			break
		:: else -> 
			for10: skip;
			run go_Anonymous1(res);
			for10_end: skip
		fi
	od;
	for10_exit: skip;
	stop_process: skip
}
proctype go_Anonymous1(Chandef res) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
