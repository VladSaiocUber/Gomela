// git_link=https://github.com/GoogleContainerTools/skaffold/blob//pkg/skaffold/kubernetes/portforward/kubectl_forwarder_test.go#L90
typedef Mutexdef {
	chan Lock = [0] of {bool};
	chan Unlock = [0] of {bool};
	chan RLock = [0] of {bool};
	chan RUnlock = [0] of {bool};
	int Counter = 0;}



init { 
	chan child_TestTerminate900 = [1] of {int};
	run TestTerminate90(child_TestTerminate900);
	run receiver(child_TestTerminate900)
stop_process:skip
}

proctype TestTerminate90(chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Mutexdef k_kubectl_versionOnce_m;
	Mutexdef pfe_terminationLock;
	run mutexMonitor(pfe_terminationLock);
	run mutexMonitor(k_kubectl_versionOnce_m);
	stop_process: skip;
	child!0
}

 /* ================================================================================== */
 /* ================================================================================== */
 /* ================================================================================== */ 
proctype mutexMonitor(Mutexdef m) {
bool locked = false;
do
:: true ->
	if
	:: m.Counter > 0 ->
		if 
		:: m.RUnlock?false -> 
			m.Counter = m.Counter - 1;
		:: m.RLock?false -> 
			m.Counter = m.Counter + 1;
		fi;
	:: locked ->
		m.Unlock?false;
		locked = false;
	:: else ->	 end:	if
		:: m.Unlock?false ->
			assert(0==32);		:: m.Lock?false ->
			locked =true;
		:: m.RUnlock?false ->
			assert(0==32);		:: m.RLock?false ->
			m.Counter = m.Counter + 1;
		fi;
	fi;
od
}

proctype receiver(chan c) {
c?0
}

