#define Shutdown_r_containers  3

// https://github.com/hyperledger/fabric/blob/8555262cca0e3b0c89e077a71c9c5312920b87b0/core/container/container.go#L157
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}
typedef Wgdef {
	chan Add = [0] of {int};
	chan Wait = [0] of {int};
	int Counter = 0;}



init { 
	Chandef done;
	Wgdef wg;
	int num_msgs = 0;
	bool state = false;
	int i;
	int r_containers = Shutdown_r_containers;
	run wgMonitor(wg);
		for(i : 0.. r_containers-1) {
		for10: skip;
		wg.Add!1;
		run go_Anonymous0(wg);
		for10_end: skip
	};
	for10_exit: skip;
	run sync_monitor(done);
	run go_Anonymous1(done,wg);
	do
	:: true -> 
		break
	:: done.async_rcv?state,num_msgs -> 
		break
	:: done.sync?state,num_msgs -> 
		break
	od
stop_process:skip
}

proctype go_Anonymous0(Wgdef wg) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	stop_process: skip;
	wg.Add!-1
}
proctype go_Anonymous1(Chandef done;Wgdef wg) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	wg.Wait?0;
	done.closing!true;
	stop_process: skip
}

