proctype go_Anonymous0(Chandef closeC) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	

	if
	:: closeC.async_send!0;
	:: closeC.sync!false,0 -> 
		closeC.sending?state
	fi;
	stop_process: skip
}

