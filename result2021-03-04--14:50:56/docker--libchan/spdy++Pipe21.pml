
// https://github.com/docker/libchan/blob/0328dcec840a0659448faf08af087135fffb7fde/spdy/pipe.go#L21
typedef Chandef {
	chan sync = [0] of {bool,int};
	chan async_send = [0] of {int};
	chan async_rcv = [0] of {bool,int};
	chan sending = [0] of {int};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	run go_Pipe()
stop_process:skip
}

proctype go_Pipe() {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Chandef waitError;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	run sync_monitor(waitError);
	run go_Anonymous1(waitError);
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	

	if
	:: waitError.async_rcv?state,num_msgs;
	:: waitError.sync?state,num_msgs;
	fi;
	

	if
	:: true -> 
		goto stop_process
	:: true;
	fi;
	goto stop_process;
	stop_process: skip
}
proctype go_Anonymous1(Chandef waitError) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	

	if
	:: waitError.async_send!0;
	:: waitError.sync!false,0 -> 
		waitError.sending?state
	fi;
	stop_process: skip
}

